APP_NAME=AuraCap
APP_ENV=development
OUTPUT_LOCALE=zh-CN

# Note:
# - Self-host / cloud deploy reads this .env.
# - GitHub-only path should configure the same keys in Actions Secrets/Variables instead of relying on .env.

# timeline timezone and timestamp format
DEFAULT_TIMEZONE=local
TIMESTAMP_FORMAT=%Y-%m-%d %H:%M:%S %Z

# storage
STORAGE_ROOT=storage
TIMELINE_FILE=storage/timeline.md
INSIGHTS_DIR=storage/insights
SUMMARY_DIR=storage/summary
CUSTOMIZED_DIR=storage/customized

# prompts
PROMPTS_DIR=prompts
TIMELINE_PROMPT_FILE=prompts/timeline_prompts.md
INSIGHTS_PROMPT_FILE=prompts/insights_prompts.md
SUMMARY_PROMPT_FILE=prompts/summary_prompts.md
CUSTOMIZED_PROMPT_FILE=prompts/customized_prompts.md

# feature flags
EXTRACT_ONLY=false
ENABLE_SCHEDULER=true
ENABLE_INSIGHTS=true
ENABLE_SUMMARY=true
ENABLE_CUSTOM_OPERATION=false
AUDIO_MODE=TRANSCRIBE_THEN_ANALYZE

# providers
TEXT_PROVIDER=mock
MM_PROVIDER=mock
ASR_PROVIDER=mock
PROVIDER_TIMEOUT_SECONDS=120

# OpenAI
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TEXT_MODEL=gpt-4.1-mini
OPENAI_MM_MODEL=gpt-4.1-mini
OPENAI_ASR_MODEL=gpt-4o-mini-transcribe

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_TEXT_MODEL=claude-3-7-sonnet-latest
ANTHROPIC_MM_MODEL=claude-3-7-sonnet-latest

# Google
GOOGLE_API_KEY=
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com
GOOGLE_TEXT_MODEL=gemini-2.0-flash
GOOGLE_MM_MODEL=gemini-2.0-flash
GOOGLE_ASR_MODEL=gemini-2.0-flash

# Groq
GROQ_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_TEXT_MODEL=llama-3.3-70b-versatile
GROQ_MM_MODEL=llama-3.2-90b-vision-preview
GROQ_ASR_MODEL=whisper-large-v3

# Mistral
MISTRAL_API_KEY=
MISTRAL_BASE_URL=https://api.mistral.ai/v1
MISTRAL_TEXT_MODEL=mistral-large-latest
MISTRAL_MM_MODEL=pixtral-large-latest
MISTRAL_ASR_MODEL=voxtral-mini-latest

# input limits
MAX_BASE64_CHARS=2000000
MAX_UPLOAD_MB=25
ALLOWED_IMAGE_MIME=image/png,image/jpeg,image/heic
ALLOWED_AUDIO_MIME=audio/m4a,audio/mp4,audio/mpeg,audio/wav,audio/x-wav

# schedule (cron uses standard convention: 0=Sunday; GitHub Actions runs in UTC)
INSIGHTS_CRON=0 1 * * *
# 0=today, 1=yesterday (default: use yesterday for complete-day insight when run at e.g. 1am)
INSIGHTS_TARGET_DAY_OFFSET=1
SUMMARY_CRON=0 2 * * 0
SUMMARY_WINDOW_DAYS=7
CUSTOM_OPERATION_MODE=ON_EACH_TRIGGER
CUSTOM_OPERATION_CRON=0 */6 * * *

# sync switches
SYNC_ENABLE=false
SYNC_DEFAULT_FREQUENCY=ON_EVENT
SYNC_DEFAULT_CRON=0 9 * * *
SYNC_SEND_TIMELINE=true
SYNC_SEND_INSIGHT=false
SYNC_SEND_SUMMARY=true
SYNC_SEND_CUSTOMIZED=false
SYNC_SEND_ERRORS=true

# sync channels
FEISHU_ENABLED=false
FEISHU_WEBHOOK_URL=

TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=

WHATSAPP_ENABLED=false
WHATSAPP_GATEWAY_URL=
WHATSAPP_TOKEN=

# security
REQUEST_SIGNATURE_SECRET=
SKIP_SIGNATURE_VERIFICATION=true

# github dispatch metadata (Path A only; Path B uses GitHub Actions Variables)
# Note: GitHub forbids variable names starting with GITHUB_. For Path B, create
# AURACAP_RELEASE_INBOX_TAG and AURACAP_RELEASE_DELETE_AFTER_PROCESS in Settings.
GITHUB_DISPATCH_EVENT_TYPE=auracap_ingest
GITHUB_RELEASE_INBOX_TAG=auracap-inbox
GITHUB_RELEASE_DELETE_AFTER_PROCESS=true
